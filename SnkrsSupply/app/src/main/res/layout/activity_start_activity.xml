<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A8CF"
    android:orientation="vertical">
    //버튼1
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="정보가 궁금하시면 신발을 클릭해주세요!"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="162dp"
            android:layout_height="158dp"
            app:srcCompat="@drawable/marsyard"
            android:onClick="mars"/>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="160dp"
            android:layout_height="162dp"
            android:layout_gravity="right"
            app:srcCompat="@drawable/salt"
            android:onClick="salt"/>

    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mars_d"
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/mars_d" />

        <ImageView
            android:id="@+id/salt_d"
            android:layout_width="wrap_content"
            android:layout_height="182dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/salt_d" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        //버튼2

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/b1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="Onclick"
                android:layout_gravity="center"
                app:srcCompat="@drawable/cal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="캘린더" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/b2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="Onclick"
                android:layout_gravity="center"
                app:srcCompat="@drawable/homepage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="홈페이지" />
        </LinearLayout>

        //버튼3

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/b3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="Onclick"
                android:layout_gravity="center"
                app:srcCompat="@drawable/footsize" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="사이즈표" />
        </LinearLayout>


        //버튼4

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/b4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:onClick="Onclick"
                android:layout_gravity="center"
                app:srcCompat="@drawable/gps" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="매장 위치" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
